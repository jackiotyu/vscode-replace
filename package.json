{
	"publisher": "jackiotyu",
	"name": "js-replace",
	"displayName": "js-replace",
	"description": "替换匹配的内容，可以使用js语句",
	"version": "0.0.1",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/jackiotyu/vscode-replace.git"
	},
	"bugs": {
		"url": "https://github.com/jackiotyu/js-replace/issues"
	},
	"engines": {
		"vscode": "^1.72.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:jsReplace.replace"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ReplaceExplorer",
					"icon": "images/icon.png",
					"title": "JS Replace"
				}
			]
		},
		"commands": [
			{
				"command": "jsReplace.replace",
				"title": "JSReplace"
			}
		],
		"configuration": {
			"type": "object",
			"title": "jsReplace设置",
			"properties": {
				"jsReplace.commands": {
					"type": "array",
					"default": [],
					"description": "注册replace命令",
					"items": {
						"type": "object",
						"title": "replace命令",
						"properties": {
							"name": {
								"type": "string",
								"description": "命令名称"
							},
							"match": {
								"type": "string",
								"description": "用于匹配文字的正则表达式",
								"default": "([0-9]{1,})rpx"
							},
							"replace": {
								"type": "string",
								"description": "匹配后的文本，$1表示匹配到的第一个分组内容，$_表示匹配的子串",
								"default": "`${($1 / 2)}px`"
							},
							"description": {
								"type": "string",
								"description": "描述命令内容"
							}
						}
					}
				},
				"jsReplace.setting": {
					"type": "object",
					"description": "replace设置, 配置更多参数的变量名映射和$1到$n前缀自定义",
					"properties": {
						"match": {
							"type": "string",
							"default": "$_",
							"description": "匹配的子串"
						},
						"prefix": {
							"type": "string",
							"default": "$",
							"description": "匹配到分组变量的前缀，设置为$，则变量为$1到$n"
						}
					}
				}
			}
		},
		"configurationDefaults": {
			"jsReplace.commands": [
				{
					"name": "rpx2px",
					"match": "([0-9]{1,})rpx",
					"replace": "`${($1 / 2)}px`",
					"description": "rpx转换px"
				}
			],
			"jsReplace.setting": {
				"match": "$_",
				"prefix": "$"
			}
		}
	},
	"scripts": {
		"pub": "vsce publish --pre-release",
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.72.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.16.0",
		"eslint-config-airbnb": "^19.0.4",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"ts-loader": "^9.3.0",
		"typescript": "^4.7.2",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2"
	}
}
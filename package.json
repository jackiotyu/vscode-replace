{
	"publisher": "jackiotyu",
	"name": "js-replace",
	"displayName": "JS Replace",
	"description": "Replace the matching content with a JS statement(使用js语句替换匹配的内容)",
	"version": "0.2.7",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/jackiotyu/vscode-replace.git"
	},
	"bugs": {
		"url": "https://github.com/jackiotyu/js-replace/issues"
	},
	"engines": {
		"vscode": "^1.72.0"
	},
	"categories": [
		"Other",
		"Formatters"
	],
	"keywords": [
		"replace",
		"js expression",
		"rpx2px",
		"rpx to px",
		"change case"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:jsReplace.replace"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "jsReplace.replace",
				"title": "JSReplace"
			}
		],
		"configuration": {
			"type": "object",
			"title": "%ext.config.title%",
			"properties": {
				"jsReplace.commands": {
					"type": "array",
					"default": [],
					"description": "%ext.config.commands%",
					"items": {
						"type": "object",
						"title": "%ext.config.commands.items%",
						"properties": {
							"name": {
								"type": "string",
								"description": "%ext.config.commands.items.name%"
							},
							"match": {
								"type": "string",
								"description": "%ext.config.commands.items.match%"
							},
							"replace": {
								"type": "string",
								"description": "%ext.config.commands.items.replace%"
							},
							"description": {
								"type": "string",
								"description": "%ext.config.commands.items.description%"
							}
						}
					}
				},
				"jsReplace.setting": {
					"type": "object",
					"description": "%ext.config.setting%",
					"properties": {
						"order": {
							"type": "string",
							"default": "$order",
							"description": "%ext.config.setting.order%"
						},
						"orderOffset": {
							"type": "number",
							"default": 0,
							"description": "%ext.config.setting.orderOffset%"
						},
						"match": {
							"type": "string",
							"default": "$_",
							"description": "%ext.config.setting.match%"
						},
						"prefix": {
							"type": "string",
							"default": "$",
							"description": "%ext.config.setting.prefix%"
						},
						"actionLanguages": {
							"type": "array",
							"default": [
								"javascript",
								"typescript",
								"html",
								"css",
								"less",
								"typescriptreact",
								"scss",
								"python",
								"markdown",
								"json",
								"javascriptreact",
								"sass",
								"go",
								"c"
							],
							"description": "%ext.config.setting.actionLanguages%",
							"items": {
								"type": "string",
								"description": "%ext.config.setting.actionLanguages.items%"
							}
						},
						"actionPattern": {
							"type": "string",
							"default": "**",
							"description": "%ext.config.setting.actionPattern%"
						},
						"actionIgnoreCommands": {
							"type": "array",
							"default": [],
							"description": "%ext.config.setting.actionIgnoreCommands%",
							"items": {
								"type": "string",
								"description": "%ext.config.setting.actionIgnoreCommands.items%"
							}
						},
						"actionNameFormat": {
							"type": "string",
							"default": "JSR $name ($description)",
							"description": "%ext.config.setting.actionNameFormat%"
						}
					}
				}
			}
		},
		"configurationDefaults": {
			"jsReplace.commands": [
				{
					"name": "rpx2px",
					"match": "([0-9]{1,})rpx",
					"replace": "`${($1 / 2)}px`",
					"description": "rpx to px"
				},
				{
					"name": "pascalCase",
					"match": "\\w{1,}[ _-]?\\w{1,}",
					"replace": "ChangeCase.pascalCase($_)",
					"description": "AaBb"
				}
			],
			"jsReplace.setting": {
				"match": "$_",
				"prefix": "$",
				"orderOffset": 0,
				"order": "$order",
				"actionPattern": "**",
				"actionLanguages": [
					"javascript",
					"typescript",
					"html",
					"css",
					"less",
					"typescriptreact",
					"scss",
					"python",
					"markdown",
					"json",
					"javascriptreact",
					"sass",
					"go",
					"c"
				],
				"actionIgnoreCommands": [],
				"actionNameFormat": "JSR $name ($description)"
			}
		}
	},
	"scripts": {
		"pub": "vsce publish --pre-release",
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.72.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-electron": "^2.1.3",
		"concurrently": "^7.5.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.16.0",
		"eslint-config-airbnb": "^19.0.4",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"ts-loader": "^9.3.0",
		"typescript": "^4.7.2",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"@types/change-case": "^2.3.1",
		"@types/fs-extra": "^9.0.13",
		"change-case": "^4.1.2",
		"fs-extra": "^10.1.0"
	}
}
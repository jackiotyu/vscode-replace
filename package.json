{
	"name": "jsReplace",
	"displayName": "jsReplace",
	"description": "替换匹配的内容，可以使用js语句",
	"version": "0.0.1",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/jackiotyu/vscode-replace.git"
	},
	"bugs": {
		"url": "https://github.com/jackiotyu/vscode-replace/issues"
	},
	"engines": {
		"vscode": "^1.72.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:jsReplace.replace"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ReplaceExplorer",
					"icon": "images/icon.png",
					"title": "JS Replace"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "ReplaceExplorer",
				"when": "workbenchState == empty"
			}
		],
		"views": {
			"ReplaceExplorer": [
				{
					"id": "OptionView",
					"name": "选项"
				},
				{
					"id": "MatchView",
					"name": "匹配区"
				},
				{
					"id": "ReplaceView",
					"name": "替换区"
				},
				{
					"id": "ResultView",
					"name": "结果区"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "jsReplace.replace",
					"when": "view == jsReplace",
					"group": "navigation"
				}
			]
		},
		"commands": [
			{
				"command": "jsReplace.replace",
				"title": "🔃JSReplace"
			}
		],
		"configuration": {
			"type": "object",
			"title": "jsReplace设置",
			"properties": {
				"jsReplace.commands": {
					"type": "array",
					"default": [],
					"description": "注册replace命令",
					"items": {
						"type": "object",
						"title": "replace命令",
						"properties": {
							"name": {
								"type": "string",
								"description": "命令名称"
							},
							"match": {
								"type": "string",
								"description": "用于匹配文字的正则表达式",
								"default": "([0-9]{1,})rpx"
							},
							"replace": {
								"type": "string",
								"description": "匹配后的文本，$1表示匹配到的第一个字符",
								"default": "`${($1 / 2)}px`"
							},
							"description": {
								"type": "string",
								"description": "描述命令内容"
							}
						}
					}
				},
				"jsReplace.setting": {
					"type": "object",
					"description": "replace设置",
					"properties": {
						"moreParam": {
							"type": "boolean",
							"description": "开启更多参数，打开后可获取到$&、__offset__等",
							"default": false
						},
						"keyMap": {
							"type": "object",
							"description": "配置更多参数的变量名映射，目前所有参数为：\n__inner_res__、__offset__、__origin_text__、$&，\n如需要替换的文本中有重名，请替换该变量名，防止运行失败",
							"properties": {
								"result": {
									"type": "string",
									"default": "__inner_res__",
									"description": "内部运算使用的变量名，无特殊情况，不需要设置该项"
								},
								"offset": {
									"type": "string",
									"default": "__offset__",
									"description": "匹配到的子字符串在原字符串中的偏移量。（比如，如果原字符串是 'abcd'，匹配到的子字符串是 'bc'，那么这个参数将会是 1）"
								},
								"originText": {
									"type": "string",
									"default": "__origin_text__",
									"description": "被匹配的原字符串"
								},
								"match": {
									"type": "string",
									"default": "__match__",
									"description": "匹配的子串"
								}
							}
						}
					}
				}
			}
		},
		"configurationDefaults": {
			"jsReplace.commands": [
				{
					"name": "rpx2px",
					"match": "([0-9]{1,})rpx",
					"replace": "`${($1 / 2)}px`",
					"description": "rpx转换px"
				}
			],
			"jsReplace.setting": {
				"moreParam": false,
				"keyMap": {
					"result": "__inner_res__",
					"offset": "__offset__",
					"originText": "__origin_text__",
					"match": "$&"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.72.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.16.0",
		"eslint-config-airbnb": "^19.0.4",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"ts-loader": "^9.3.0",
		"typescript": "^4.7.2",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2"
	}
}